generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  ADMIN
  VOLUNTEER
}

enum CollectionStatus {
  Pending
  Collected
  Collected_By_Behalf
}

enum CollectedByType {
  Self
  Behalf
}

enum ParticipantSource {
  EXCEL
  ON_SPOT
}

model ExpoEvent {
  id           String        @id @default(uuid())
  name         String
  createdAt    DateTime      @default(now())
  participants Participant[]
}

model Participant {
  id                     String            @id @default(uuid())
  bibNumber              Int               @unique
  name                   String
  email                  String?
  phone                  String?
  category               String?
  groupName              String?
  age                    String?
  gender                 String?
  tShirtSize             String?
  registeredOn           String?
  emailVerified          Boolean           @default(false)
  paymentStatus          String            @default("paid")
  source                 ParticipantSource @default(EXCEL)
  eventId                String?

  collectionStatus       CollectionStatus  @default(Pending)
  collectedByType        CollectedByType?
  collectionMethod       String?
  collectedByName        String?
  collectedByContact     String?
  collectedByRelation    String?
  collectedByVolunteerId String?
  collectedAt            DateTime?

  collectedByVolunteer   Volunteer?        @relation(fields: [collectedByVolunteerId], references: [id], onDelete: SetNull)
  expoEvent              ExpoEvent?        @relation(fields: [eventId], references: [id])
  createdAt              DateTime          @default(now())
  updatedAt              DateTime          @updatedAt

  @@index([collectedByVolunteerId])
  @@index([eventId])
}

model Volunteer {
  id           String        @id @default(uuid())
  name         String
  email        String        @unique
  password     String
  counterName  String?
  role         Role          @default(VOLUNTEER)
  createdAt    DateTime      @default(now())
  participants Participant[]
}
